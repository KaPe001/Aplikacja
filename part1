listapozywek=['AO','MC','Chapman','SS','CetrymidAgar','ChromAgar']
def wybor(y):
  for i in(range(len(y)):
  print('Wybierz ', i, 'jeśli interesuje Cię ',y[i])
  x=int(input())
  if x<0 or x>=len(y):
    print('Wybrałeś złą pożywkę, Wpisz jeszcze raz: ', y[x])
  return(x)
